    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "backend.app.main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Frontend: pnpm run dev",
            "type": "node-terminal",
            "request": "launch",
            "command": "pnpm run dev --host",
            "cwd": "${workspaceFolder}/frontend"
        },
        {
            "name": "Celery",
            "type": "debugpy",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A",
                "app.core.celery_config",
                "worker",
                "--loglevel=INFO"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "Start Backend and Frontend",
            "configurations": [
                "Python Debugger: FastAPI",
                "Frontend: pnpm run dev"
            ]
        },
        {
            "name": "Start All (Backend, Frontend, Celery)",
            "configurations": [
                "Python Debugger: FastAPI",
                "Frontend: pnpm run dev",
                "Celery"
            ],
            "default": true
        }
    ]
}